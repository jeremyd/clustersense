# This is an example PKGBUILD file. Use this as a start to creating your own,
# and remove these comments. For more information, see 'man PKGBUILD'.
# NOTE: Please fill out the license field for your package! If it is unknown,
# then please put 'unknown'.

# See http://wiki.archlinux.org/index.php/VCS_PKGBUILD_Guidelines
# for more information on packaging from GIT sources.

# Maintainer: Your Name <youremail@domain.com>
pkgname=ami-agents-git
pkgver=20130119
pkgrel=1
pkgdesc="ami-agents"
arch=(x86_64)
url="http://github.com/jeremyd"
license=('GPL')
groups=()
depends=('jruby redis openvpn zeromq libxml2 libxslt lsb-release')
makedepends=('git rsync jruby ruby zeromq libxml2 libxslt')
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
source=()
noextract=()
md5sums=() #generate with 'makepkg -g'

_gitroot=jeremy@err.myl33tbox.com:gits/ami-agents
_gitname=ami-agents

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."
}

package() {
  jruby -S gem install bundler
  gem install bundler --no-user
  mkdir -p "$pkgdir/usr/bin"
  mkdir -p "$pkgdir/usr/lib/systemd/system"
  mkdir -p "$pkgdir/etc/ami-agents"
  rsync -vr --exclude=.git "$srcdir/$_gitname/" "/$pkgdir/usr/lib/$pkgname/"
  cd $pkgdir/usr/lib/$pkgname
  jruby -S bundle install --standalone
  bundle install --standalone
  cd "$pkgdir/usr/bin/"
  ln -s ../lib/$pkgname/bin/ami-agents ami-agents
# systemd service must be a file and not a link
  cd "$pkgdir/usr/lib/systemd/system"
  cp ../../$pkgname/systemd/ami-agents@.service ami-agents@.service
  cd "$pkgdir/etc/ami-agents"
  ln -s ../../usr/lib/$pkgname/config/config.yml.example config.yml.example
}

# vim:set ts=2 sw=2 et:
